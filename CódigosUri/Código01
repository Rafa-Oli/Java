import java.util.Scanner;
public class Main {
 
    public static void main(String[] args){
        Scanner ler = new Scanner(System.in);
		int code1 = ler.nextInt();int quant1 = ler.nextInt();double valor1 = ler.nextDouble();
		int code2 = ler.nextInt();int quant2 = ler.nextInt();double valor2 = ler.nextDouble();

		System.out.printf("VALOR A PAGAR: R$ %.2f", (quant1 * valor1) + (quant2 * valor2));

 
